@{
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                        <div class="brand-logo text-center mt-4">
                            <img src="~/Styles/images/logo.png" alt="logo">
                        </div>

                        <div class="text-center mt-4">
                            <h3 class="text-primary font-weight-bold">Gestor de Operaciones ExperienceSync</h3>
                            <br>
                            <h4 class="text-secondary font-weight-light">Inicia Sesión</h4>
                            <br>
                        </div>

                        <form method="post">
                            <div class="form-group">
                                <input type="email" name="Email" class="form-control form-control-lg" placeholder="Correo Electrónico" required>
                            </div>
                            <div class="form-group">
                                <input type="password" name="Password" class="form-control form-control-lg" placeholder="Contraseña" required>
                            </div>
                            <!--
                                <div class="mt-3">
                                    <input type="submit" class="btn btn-block btn-primary btn-lg font-weight-bold auth-form-btn" value="Iniciar Sesión">
                                </div>
                            -->
                            <a href="@Url.Action("Index", "Home")" type="button" class="btn btn-block btn-primary btn-lg font-weight-bold auth-form-btn">
                                Iniciar Sesión
                            </a>

                            <br>
                            <div class="my-2 d-flex align-items-center font-weight-light" style="text-align: left; justify-content: center;">
                                <a href="@Url.Action("RecuperarPassword", "Autenticacion")" class="text-primary">¿Olvidaste tu contraseña?</a>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

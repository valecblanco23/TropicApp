<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>ExperienceSync</title>

    <link rel="stylesheet" href="~/Styles/feather/feather.css">
    <link rel="stylesheet" href="~/Styles/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/Styles/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/Styles/vertical-layout-light/style.css">
    <link rel="shortcut icon" href="~/Styles/images/favicon.png" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/2.1.8/css/dataTables.bootstrap5.css">

    <!--Calendario-->
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/index.global.min.js'></script>
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar-scheduler@6.1.15/index.global.min.js'></script>

</head>

<body>
    <div class="container-scroller">
        <!--Header-->
        <nav class="navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
                <a class="navbar-brand brand-logo mr-5" href="@Url.Action("Index", "Home")"><img src="~/Styles/images/logo.png" class="mr-2" alt="logo" /></a>
                <a class="navbar-brand brand-logo-mini" href="@Url.Action("Index", "Home")"><img src="~/Styles/images/logo-mini.png" alt="logo" /></a>
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-center justify-content-end">
                <!-- Botón para mostrar/ocultar Menú Lateral-->
                <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                    <span class="fas fa-bars"></span>
                </button>

                <!--Barra de búsqueda-->
                <ul class="navbar-nav mr-lg-2">
                    <li class="nav-item nav-search d-none d-lg-block">
                        <div class="input-group">
                            <div class="input-group-prepend hover-cursor" id="navbar-search-icon">
                                <span class="input-group-text" id="search">
                                    <i class="fas fa-search"></i>
                                </span>
                            </div>
                            <input type="text" class="form-control" id="navbar-search-input" placeholder="Buscar" aria-label="search" aria-describedby="search">
                        </div>
                    </li>
                </ul>

                <!--Menú desplegable de Notificaciones-->
                <ul class="navbar-nav navbar-nav-right">
                    <li class="nav-item dropdown">
                        <a class="nav-link count-indicator dropdown-toggle" id="notificationDropdown" href="#" data-toggle="dropdown">
                            <i class="fas fa-bell mx-0"></i>
                            <span class="count"></span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="notificationDropdown">
                            <p class="mb-0 font-weight-normal float-left dropdown-header">Notificaciones</p>

                            <a class="dropdown-item preview-item">
                                <div class="preview-thumbnail">
                                    <div class="preview-icon bg-success">
                                        <i class="fas fa-info-circle mx-0"></i>
                                    </div>
                                </div>
                                <div class="preview-item-content">
                                    <h6 class="preview-subject font-weight-normal">Próximos Eventos</h6>
                                    <p class="font-weight-light small-text mb-0 text-muted">
                                        Eventos pendientes de la semana: 3
                                    </p>
                                </div>
                            </a>

                            <a class="dropdown-item preview-item">
                                <div class="preview-thumbnail">
                                    <div class="preview-icon bg-info">
                                        <i class="fas fa-user mx-0"></i>
                                    </div>
                                </div>
                                <div class="preview-item-content">
                                    <h6 class="preview-subject font-weight-normal">Nuevo Usuario Registrado</h6>
                                    <p class="font-weight-light small-text mb-0 text-muted">
                                        Hace 2 días
                                    </p>
                                </div>
                            </a>

                        </div>
                    </li>

                    <!--Menú desplegable del Usuario Conectado-->
                    <li class="nav-item nav-profile dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" id="profileDropdown">
                            Usuario Conectado
                        </a>
                        <div class="dropdown-menu dropdown-menu-right navbar-dropdown" aria-labelledby="profileDropdown">
                            <a class="dropdown-item">
                                <i class="fas fa-cogs text-primary"></i>
                                Mi Perfil
                            </a>
                            <a class="dropdown-item" href="@Url.Action("Login", "Autenticacion")">
                                <i class="fas fa-sign-out-alt text-primary"></i>
                                Cerrar Sesión
                            </a>
                        </div>
                    </li>

                    <!--Botón de mostrar/ocultar chats y eventos del usuario-->
                    <li class="nav-item nav-settings d-none d-lg-flex">
                        <a class="nav-link" href="#">
                            <i class="fas fa-ellipsis-h"></i>
                        </a>
                    </li>

                </ul>

                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                    <span class="fas fa-bars"></span>
                </button>

            </div>
        </nav>

        <div class="container-fluid page-body-wrapper">
            <!-- Chats y Eventos del Usuario -->
            <div id="right-sidebar" class="settings-panel">
                <i class="settings-close ti-close"></i>
                <ul class="nav nav-tabs border-top" id="setting-panel" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="todo-tab" data-toggle="tab" href="#todo-section" role="tab" aria-controls="todo-section" aria-expanded="true">
                            <i class="fas fa-calendar-day mr-2"></i>EVENTOS
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="chats-tab" data-toggle="tab" href="#chats-section" role="tab" aria-controls="chats-section">
                            <i class="fas fa-comment-dots mr-2"></i>CHATS
                        </a>
                    </li>
                </ul>

                <div class="tab-content" id="setting-content">
                    <!--Tab de Eventos-->
                    <div class="tab-pane fade show active scroll-wrapper" id="todo-section" role="tabpanel" aria-labelledby="todo-section">
                        <h4 class="px-3 text-muted mt-2 font-weight-light mb-0">Eventos</h4>
                        <div class="events pt-4 px-3">
                            <div class="wrapper d-flex mb-2">
                                <i class="fas fa-circle text-primary mr-2"></i>
                                <span>Octubre 18 2025</span>
                            </div>
                            <p class="mb-0 font-weight-thin text-gray">Clase de cocina</p>
                            <p class="text-gray mb-0">Cantidad de asistentes: 15</p>
                        </div>
                        <div class="events pt-4 px-3">
                            <div class="wrapper d-flex mb-2">
                                <i class="fas fa-circle text-primary mr-2"></i>
                                <span>Octubre 23 2025</span>
                            </div>
                            <p class="mb-0 font-weight-thin text-gray">Catering service</p>
                            <p class="text-gray mb-0 ">Cantidad de asistentes: 22</p>
                        </div>
                    </div>

                    <!--Tab de Chats-->
                    <div class="tab-pane fade" id="chats-section" role="tabpanel" aria-labelledby="chats-section">
                        <ul class="chat-list">
                            <li class="list active">
                                <div class="profile"><img src="~/Styles/images/faces/face1.jpg" alt="image"><span class="online"></span></div>
                                <div class="info">
                                    <p>Luis Camacho</p>
                                    <p>En línea</p>
                                </div>
                                <small class="text-muted my-auto">19 min</small>
                            </li>
                            <li class="list">
                                <div class="profile"><img src="~/Styles/images/faces/face2.jpg" alt="image"><span class="offline"></span></div>
                                <div class="info">
                                    <div class="wrapper d-flex">
                                        <p>María Pérez</p>
                                    </div>
                                    <p>Fuera de línea</p>
                                </div>
                                <div class="badge badge-success badge-pill my-auto mx-2">4</div>
                                <small class="text-muted my-auto">23 min</small>
                            </li>
                            <li class="list">
                                <div class="profile"><img src="~/Styles/images/faces/face3.jpg" alt="image"><span class="online"></span></div>
                                <div class="info">
                                    <p>Daniel Rodríguez</p>
                                    <p>En línea</p>
                                </div>
                                <small class="text-muted my-auto">14 min</small>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Menú Lateral -->
            <nav class="sidebar sidebar-offcanvas" id="sidebar" style="width: 265px";>
                <ul class="nav">
                    <!-- Inicio -->
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">
                            <i class="fas fa-home menu-icon"></i>
                            <span class="menu-title">Inicio</span>
                        </a>
                    </li>

                    <!-- Calendario -->
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("CalendarioTareas", "Calendario")">
                            <i class="fas fa-calendar-alt menu-icon"></i>
                            <span class="menu-title">Calendario de Eventos</span>
                        </a>
                    </li>

                    <!-- Tablero -->
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("TableroKanban", "Tablero")">
                            <i class="fas fa-tasks menu-icon"></i>
                            <span class="menu-title">Tablero de Tareas</span>
                        </a>
                    </li>

                    <!-- Usuarios -->
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ListadoUsuarios", "ControlUsuario")">
                            <i class="fas fa-users-cog menu-icon"></i>
                            <span class="menu-title">Control de Usuarios</span>
                        </a>
                    </li>

                    <!-- Información -->
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="collapse" href="#gestionInfo" aria-expanded="false" aria-controls="tables">
                            <i class="fas fa-cogs menu-icon"></i>
                            <span class="menu-title">Gestión de la Información </span>
                            <i class="menu-arrow"></i>
                        </a>
                        <div class="collapse" id="gestionInfo">
                            <ul class="nav flex-column sub-menu">
                                <li class="nav-item"> <a class="nav-link" href="@Url.Action("Listado", "GestionInformacion")">Centros de Experiencia</a></li>
                                <li class="nav-item"> <a class="nav-link" href="@Url.Action("ListadoClientes", "GestionInformacion")">Clientes</a></li>
                                <li class="nav-item"> <a class="nav-link" href="@Url.Action("ListadoEmpleados", "GestionInformacion")">Empleados</a></li>
                                <li class="nav-item"> <a class="nav-link" href="@Url.Action("Listado", "GestionInformacion")">Proveedores</a></li>
                                <li class="nav-item"> <a class="nav-link" href="@Url.Action("Listado", "GestionInformacion")">Reservas</a></li>
                            </ul>
                        </div>
                    </li>

                    <!-- Catálogo -->
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ListadoServicios", "CatalogoServicios")">
                            <i class="fas fa-clipboard-list menu-icon"></i>
                            <span class="menu-title">Catálogo de Servicios</span>
                        </a>
                    </li>

                    <!-- Reportes -->
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="collapse" href="#reportes" aria-expanded="false" aria-controls="tables">
                            <i class="fas fa-cogs menu-icon"></i>
                            <span class="menu-title">Reportes</span>
                            <i class="menu-arrow"></i>
                        </a>
                        <div class="collapse" id="reportes">
                            <ul class="nav flex-column sub-menu">
                                <li class="nav-item"> <a class="nav-link" href="@Url.Action("Reportes", "Reportes")">Reportes</a></li>
                                <li class="nav-item"> <a class="nav-link" href="@Url.Action("Graficos", "Reportes")">Gráficas</a></li>
                            </ul>
                        </div>
                    </li>

                    <!-- Marketing -->
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="collapse" href="#marketingAutomatizado" aria-expanded="false" aria-controls="form-elements">
                            <i class="fas fa-bullhorn menu-icon"></i>
                            <span class="menu-title">Marketing Automatizado </span>
                            <i class="menu-arrow"></i>
                        </a>
                        <div class="collapse" id="marketingAutomatizado">
                            <ul class="nav flex-column sub-menu">
                                <li class="nav-item"><a class="nav-link" href="@Url.Action("ProgramarEnvio", "Marketing")">Programar Envío</a></li>
                                <li class="nav-item"><a class="nav-link" href="@Url.Action("HistorialEnvio", "Marketing")">Historial de Envíos</a></li>
                            </ul>
                        </div>
                    </li>

                    <!-- Asistente-->
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("AsistenteVirtual", "AsistenteVirtual")">
                            <i class="fas fa-clipboard-list menu-icon"></i>
                            <span class="menu-title">Asistente Virtual</span>
                        </a>
                    </li>

                    <!-- EXTRAS 
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="collapse" href="#index" aria-expanded="false" aria-controls="form-elements">
                            <i class="fas fa-cogs menu-icon"></i>
                            <span class="menu-title">*Recursos para Interfaz*</span>
                            <i class="menu-arrow"></i>
                        </a>
                        <div class="collapse" id="index">
                            <ul class="nav flex-column sub-menu">
                                <li class="nav-item"><a class="nav-link" href="@Url.Action("Formularios", "Home")">Formularios</a></li>
                                <li class="nav-item"><a class="nav-link" href="@Url.Action("Botones", "Home")">Botones</a></li>
                            </ul>
                        </div>
                    </li> -->
                </ul>
            </nav>

            <!-- Contenido de la página -->
            <div class="main-panel">
                <div class="content-wrapper justify-content-center">
                    <!-- Contenido de Vistas -->
                    @RenderBody()
                </div>

                <!-- Footer -->
                <footer class="footer">
                    <div class="d-sm-flex justify-content-center justify-content-sm-between">
                        <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">
                            Gestor de Operaciones ExperienceSync Tropic S.A Copyright © 2025.
                        </span>
                        <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">
                            Versión 1.0
                        </span>
                    </div>
                </footer>

            </div>
        </div>
    </div>

    <script src="~/Styles/js/vendor.bundle.base.js"></script>
    <script src="~/Styles/js/off-canvas.js"></script>
    <script src="~/Styles/js/hoverable-collapse.js"></script>
    <script src="~/Styles/js/template.js"></script>
    <script src="~/Styles/js/settings.js"></script>
    <script src="~/Styles/js/todolist.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
    <script src="https://cdn.datatables.net/2.1.8/js/dataTables.js"></script>
    <script src="https://cdn.datatables.net/2.1.8/js/dataTables.bootstrap5.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.14.5/dist/sweetalert2.all.min.js"></script>
</body>

</html>